CREATE TABLE missao (
    id INT PRIMARY KEY auto_increment,
    hash nchar(22),
    titulo VARCHAR(80),
    forca INT,
    fk_competencia_id INT,
    fk_etapa_id INT
);


insert into missao(titulo,forca) values
("Encontrar Tags",1),
("Encontrar “Selectores”",2),
("Encontrar “Scripts”",3),
("Encontrar “Exceptions”",4),
